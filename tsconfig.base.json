{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@org/common-next": ["libs/common-next/src/index.ts"],
      "@org/common-node": ["libs/common-node/src/index.ts"],
      "@org/types": ["types"],
      "test": ["./declares-types/test"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
